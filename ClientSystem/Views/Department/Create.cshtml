@model ClientSystem.Models.Department

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="content" style="text-align:center;margin-left:500px">
        <div class="row">

            <div class="col-md-6">

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Department Create</h3>
                    </div>
                    <form role="form">
                        <div class="box-body">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.Label("Department Name", htmlAttributes: new { @class = "control-label col-md-5" })
                                <div>
                                    @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", @id = "department" } })
                                    @Html.ValidationMessageFor(model => model.DepartmentName, "", new { htmlAttributes = new { @class = "text-danger" } })
                                    <span id="message"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Submit" class="btn btn-default pull-left" onclick="CheckAvailability()" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    function CheckAvailability() {
        var department = $("#department").val();
        $.ajax({
            type: "POST",
            url: "/Department/CheckDepartment",
            data: '{department: "' + department + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                var message = $("#message");
                if (response) {
                    message.css("color", "Red");
                    alert("This Department is Already Added");
                    window.location = "/Department/Create";
                }


            }
        });
    };
    function ClearMessage() {
        $("#message").html("");
    };
</script>
